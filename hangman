#!/usr/bin/bash

word=$(cat /usr/share/dict/words | egrep ^......?.?.?$ | shuf -n 1)
max_attempts=6
word_count=$(echo -n $word | wc -c)

echo $word
echo $word_count
i=0
j=0
c=0
match=0

for (( i=0; i<$word_count; i++ ))
do
	echo -n "_"
done
echo 

while [[ j -lt $max_attempts || match -eq word_count ]]
do
	read -p "Attempt $((j+1)): " guess_letter

	for(( c=0; c<$word_count; c++ ))
	do
			if [[ $guess_letter == ${word:$c:1} ]]
			then echo ${word:$c:1}
			((match++))
			fi
	done
	((j++))
done

echo "$match"
